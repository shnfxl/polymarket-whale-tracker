# Polymarket APIs (public)
POLYMARKET_GAMMA_API=https://gamma-api.polymarket.com
POLYMARKET_DATA_API=https://data-api.polymarket.com

# Alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Local JSON state persistence (dedupe/cooldowns across restarts)
BOT_STATE_FILE=memory/polymarket_state.json

# Detection tuning
MIN_WHALE_BET_USD=20000
MIN_LIQUIDITY_USD=10000
MIN_MARKET_VOLUME_24H=25000
POLL_INTERVAL_SECONDS=60
MIN_PRICE_BAND=0.05
MAX_PRICE_BAND=0.95

# Market category filter (comma-separated). Leave empty for all.
MARKET_CATEGORIES=crypto,stocks

# Gate toggles (debug)
DISABLE_MARKET_GATES=false
DISABLE_CLUSTER_GATE=false
DISABLE_WALLET_GATE=false
DISABLE_TREND_GATE=false
DISABLE_IMPACT_GATE=false
